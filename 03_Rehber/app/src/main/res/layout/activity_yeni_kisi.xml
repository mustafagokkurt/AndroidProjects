<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityYeniKisi">

    <TextView
        android:id="@+id/tvAd"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="Ad"
        app:layout_constraintBottom_toBottomOf="@+id/etAd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAd"
        app:layout_constraintTop_toTopOf="@+id/tvAd" />

    <TextView
        android:id="@+id/tvSoyad"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Soyad"
        app:layout_constraintBottom_toBottomOf="@+id/etSoyad"
        app:layout_constraintEnd_toStartOf="@+id/etSoyad"
        app:layout_constraintStart_toStartOf="@+id/tvAd"
        app:layout_constraintTop_toBottomOf="@+id/etAd" />

    <EditText
        android:id="@+id/etSoyad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etAd"
        app:layout_constraintStart_toEndOf="@+id/tvAd"
        app:layout_constraintTop_toBottomOf="@+id/etAd" />

    <TextView
        android:id="@+id/tvCinsiyet"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Cinsiyet"
        app:layout_constraintBottom_toBottomOf="@+id/spCinsiyet"
        app:layout_constraintStart_toStartOf="@+id/tvEPosta"
        app:layout_constraintTop_toBottomOf="@+id/etEPosta" />

    <EditText
        android:id="@+id/etEPosta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etSoyad"
        app:layout_constraintStart_toEndOf="@+id/tvSoyad"
        app:layout_constraintTop_toBottomOf="@+id/etSoyad" />

    <TextView
        android:id="@+id/tvEPosta"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="E-Posta"
        app:layout_constraintBottom_toBottomOf="@+id/etEPosta"
        app:layout_constraintStart_toStartOf="@+id/tvSoyad"
        app:layout_constraintTop_toBottomOf="@+id/etSoyad" />

    <Spinner
        android:id="@+id/spCinsiyet"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/etEPosta"
        app:layout_constraintStart_toStartOf="@+id/etEPosta"
        app:layout_constraintTop_toBottomOf="@+id/etEPosta" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="Add_OnClick"
        android:text="Kaydet"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/spCinsiyet"
        app:layout_constraintTop_toBottomOf="@+id/spCinsiyet" />
</androidx.constraintlayout.widget.ConstraintLayout>